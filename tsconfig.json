{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "module": "NodeNext",
        "allowJs": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "outDir": "dist",
        "sourceMap": true,
        "lib": [
            "es2022",
            "dom"
        ]
    }
}
